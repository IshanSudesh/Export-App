<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productImage_productDetails"
            android:layout_width="match_parent"
            android:layout_height="276dp"
            android:contentDescription="dis"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/linearLayout_productDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="16dp">

            <TextView
                android:id="@+id/productName_productDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/productPrice_productDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Price"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/productOwnerName_productDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="tag"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/productDescription_productDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="description"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/productOwnerEmail_productDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="10dp"
                android:text="email"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/productOwnerPhone_productDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="10dp"
                android:text="Phone"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>